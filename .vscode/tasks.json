{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build project",
            "command": "./build.cmd",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "source": "clang",
                "pattern": {
                    "regexp": "^(.*):(\\d{1,20}):(\\d{1,20}):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Build & Run project",
            "command": "./build_and_run.cmd",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "none"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "source": "clang",
                "pattern": {
                    "regexp": "^(.*):(\\d{1,20}):(\\d{1,20}):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}